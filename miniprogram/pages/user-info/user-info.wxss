page {
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  width: 100%;
}

.userinfo {
  position: relative;
  margin: 0 auto;
  width: 100%;
  height: 190rpx;
  background-color: white;
}

.userinfo-avatar {
  position: absolute;
  top: 50rpx;
  left: 36rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
  background-size: 140rpx 140rpx;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 100rpx;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname-panel {
  position: absolute;
  left: 200rpx;
  top: 50rpx;
}

.userinfo-nickname {
  font-size: 45rpx;
  font-weight: 500;
  line-height: 45rpx;
}

.userinfo-gender-icon {
  margin-left: 15rpx;
  width: 50rpx;
  height: 50rpx;
}

.userinfo-wechat {
  position: absolute;
  left: 200rpx;
  top: 105rpx;
  color: #9c9c9c;
}

.userinfo-city {
  position: absolute;
  left: 200rpx;
  top: 150rpx;
  color: #9c9c9c;
}

.edit-user-btn {
  margin-left: 10rpx;
  color: #6175da;
  font-weight: 400;
}

.user-profile {}

.user-profile-title {
  margin-top: 30rpx;
  margin-left: 36rpx;
  margin-right: 36rpx;
  margin-bottom: 20rpx;
  text-align: left;
  font-size: 32rpx;
  font-weight: 500;
  color: #712525;
  border-bottom: 1px solid #712525;
}

.radar-panel {
  margin-left: 36rpx;
  margin-right: 36rpx;
  padding-top: 50rpx;
  height: 400rpx;
  background-color: #f7f7f7;
}

.radar-canvas {
  height: 350rpx;
}

.team-list {
  margin-top: 80rpx;
}

.team-list-title {
  margin-top: 30rpx;
  margin-left: 36rpx;
  margin-right: 36rpx;
  margin-bottom: 20rpx;
  text-align: left;
  font-size: 32rpx;
  font-weight: 500;
  color: #712525;
  border-bottom: 1px solid #712525;
}

.team-list-panel {}

.team-item {
  position: relative;
  margin: 30rpx;
  border: 1px;
  border-radius: 3px;
  box-shadow: 1px 1px 3px #888888;
  padding: 20rpx 30rpx;
}

.team-topic {
  margin-left: 10rpx;
  font-weight: 500;
  color: #3a3030
}

.team-date-time {
  margin-left: auto;
  margin-right: 10rpx;
}
