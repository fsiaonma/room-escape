.team-info-page {
  margin-top: 70rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}

.base-info-item {
  margin-bottom: 50rpx;
  border: 1px;
  border-radius: 3px;
  box-shadow: 1px 1px 3px #888888;
  padding: 20rpx 30rpx;
}

.item-title {
  margin-bottom: 15rpx;
  line-height: 60rpx;
}

.item-topic {
  font-size: 45rpx;
  font-weight: 500;
}

.item-types {
  margin-left: 15rpx;
  font-size: 35rpx;
}

.item-date {
  font-size: 30rpx;
}

.item-time {
  font-size: 30rpx;
}

.item-shop {
  font-size: 30rpx;
}

.item-address {
  font-size: 30rpx;
}

.item-wechat {
  font-size: 30rpx;
}

.copy-text {
  color: #6175da;
  font-weight: 400;
}

.item-remark {
  font-size: 30rpx;
}

.item-people {
  margin: 15rpx 0;
  font-size: 30rpx;
  font-weight: bold;
}

.team-member-title {
  margin-bottom: 10rpx;
  font-size: 35rpx;
}

.team-member-item {
  margin-bottom: 60rpx;
}

.male-background {
  background-color: #d7ebff;
}

.female-background {
  background-color: #ffbb9d;
}

.member-item {
  margin-bottom: 15rpx;
  border: 1px;
  border-radius: 3px;
  box-shadow: 1px 1px 3px #888888;
  padding: 20rpx 30rpx;
}

.member-item-avatar {
  margin-right: 10rpx;
  border-radius: 50%;
  line-height: 50rpx;
  width: 50rpx;
  height: 50rpx;
  background-size: 50rpx 50rpx;
}

.member-item-wechat {
  margin-left: 10rpx;
}

.member-item-friend {
  margin-left: auto;
  margin-right: 10rpx;
}

.edit-btn {
  background-color: #3a3030 !important;
}

.join-btn {
  background-color: #3a3030 !important;
}

.goto-index-btn {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background-color: #3a3030 !important;
}
