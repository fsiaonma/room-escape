<view class="team-info-page">
  <view class="base-info-title">基础信息</view>
  <view class="base-info-item">
    <view class="weui-flex item-title">
      <view class="item-topic-name">{{topicName}}</view>
      <view wx:if="{{shopName}}" class="item-shop-name">【{{shopName}}】</view>
    </view>
    <view class="item-date">日期：{{date}}</view>
    <view class="item-time">场次：{{time}}</view>
    <view class="item-time">人数：{{needMemberAmount}}</view>
  </view>

  <view class="team-member-title">成员信息</view>
  <view class="team-member-item">
    <view wx:for="{{memberList}}" wx:key="index">
      <view class="member-item weui-flex" data-openid="{{item.openid}}" bindtap="onUserItemTap">
        <view
          style="background-image: url({{item.avatarUrl}})"
          class="member-item-avatar"
        ></view>
        <view class="member-item-wechat">{{item.wechat}}</view>
        <view wx:if="{{item.male_friend_amount > 0 || item.female_friend_amount > 0}}" class="member-item-friend">
          <span>带</span>
          <span wx:if="{{item.male_friend_amount > 0}}">{{item.male_friend_amount}}男</span>
          <span wx:if="{{item.female_friend_amount > 0}}">{{item.female_friend_amount}}女</span>
        </view>
      </view>
    </view>
  </view>

  <view slot="button">
    <button wx:if="{{btnType === 'join'}}" type="primary" bindtap="onJoinTeam">加入车队</button>
    <button wx:if="{{btnType === 'left'}}" type="warn" bindtap="onLeftTeam">退出车队</button>
  </view>
</view>

