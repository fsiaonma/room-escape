<mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
<mp-form-page title="个人信息">
  <mp-form id="form" rules="{{rules}}" models="{{formData}}">
    <mp-cells title="基础信息">
      <mp-cell prop="wechat" title="微信号">
        <input value="{{wechat}}" bindchange="bindWeChangeNoChange"/>
      </mp-cell>
    </mp-cells>
    <mp-cells title="我的标签">
      <mp-checkbox-group prop="tagList" multi="{{true}}" bindchange="checkboxChange">
        <mp-checkbox
          wx:for="{{tagList}}"
          wx:key="value"
          label="{{item.name}}"
          value="{{item.value}}"
          checked="{{item.checked}}"
        ></mp-checkbox>
      </mp-checkbox-group>
    </mp-cells>
  </mp-form>
  <view slot="button">
    <button type="primary" bindtap="onSaveInfo" class="save-btn">保存信息</button>
  </view>
</mp-form-page>


