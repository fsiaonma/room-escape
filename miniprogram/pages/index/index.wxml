<!--index.wxml-->
<view class="container" data-weui-theme="dark">
  <!-- 用户 openid -->
  <view class="userinfo">
    <button 
      open-type="getUserInfo" 
      bindgetuserinfo="onGetUserInfo"
      class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})"
      size="default"
    ></button>
    <view class="userinfo-nickname-wrapper">
      <button class="userinfo-nickname">{{userInfo.nickName}}</button>
    </view>
  </view>

  <!-- 车队列表 -->
  <view class="team-list">
    <view wx:for="{{teamList}}" wx:key="index" class="team-item">
      <view>{{item.title}}</view>
      <view>{{item.desc}}</view>
      <view>{{item.people_amount}}</view>
    </view>
  </view>

  <!-- 发车按钮 -->
  <button type="primary" class="create-btn" bindtap="onCreateTeamClick">发起车队</button>
</view>
