/**index.wxss**/

page {
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.container {
  width: 100%;
}

.userinfo {
  position: fixed;
  margin: 0 auto;
  width: 100%;
  background-color: white;
}

.userinfo-nickname-wrapper {
  width: 100%;
}

.userinfo-nickname {
  width: 100% !important;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 100rpx;
}

.userinfo-avatar:after {
  border: none;
}

.team-list {
  margin-top: 250rpx;
  margin-bottom: 100rpx;
}

.team-item {
  margin: 30rpx;
  border: 1px;
  border-radius: 3px;
  box-shadow: 1px 1px 3px #888888;
  padding: 10rpx;
}

.create-btn {
  position: fixed;
  bottom: 0;
  width: 100% !important;
  height: 120rpx !important;
  line-height: 90rpx !important;
}
