<div class="page">
  <div class="weui-form coe-team-form">
    <div class="weui-form__control-area">
      <div class="weui-cells__group weui-cells__group_form">
        <div class="weui-cells">
          <div class="weui-cell weui-cell_active weui-cell_access">
            <div class="weui-cell__hd"><label class="weui-label">店铺名</label></div>
            <div class="weui-cell__bd">
              <input class="weui-input" value="{{shopName}}" bindchange="bindShopChange"/>
            </div>
          </div>

          <div class="weui-cell weui-cell_active weui-cell_access">
             <div class="weui-cell__hd"><label class="weui-label">主题名</label></div>
            <div class="weui-cell__bd">
              <input class="weui-input" value="{{topicName}}" bindchange="bindTopicChange"/>
            </div>
          </div>

          <picker mode="date" value="{{date}}" bindchange="bindDateChange">
            <div class="weui-cell weui-cell_active weui-cell_access">
              <div class="weui-cell__hd"><label class="weui-label">活动日期</label></div>
              <div class="weui-cell__bd">{{date}}</div>
            </div>
          </picker>

          <picker mode="time" value="{{time}}" bindchange="bindTimeChange">
            <div class="weui-cell weui-cell_active weui-cell_access">
              <div class="weui-cell__hd"><label class="weui-label">活动时间</label></div>
              <div class="weui-cell__bd">{{time}}</div>
            </div>
          </picker>

          <div class="weui-cell weui-cell_active weui-cell_access">
            <div class="weui-cell__hd"><label class="weui-label">发车人数</label></div>
            <div class="weui-cell__bd">
              <input type="number" class="weui-input" value="{{minPeopleAmount}}" bindchange="bindMinPeopleAmountChange"/>
            </div>
          </div>

          <div class="weui-cell weui-cell_active weui-cell_access">
            <div class="weui-cell__hd"><label class="weui-label">封车人数</label></div>
            <div class="weui-cell__bd">
              <input type="number" class="weui-input" value="{{maxPeopleAmount}}" bindchange="bindMaxPeopleAmountChange"/>
            </div>
          </div>

          <div class="weui-cell weui-cell_active weui-cell_access">
            <div class="weui-cell__hd"><label class="weui-label">微信号</label></div>
            <div class="weui-cell__bd">
              <input type="number" class="weui-input" value="{{wechatNo}}" bindchange="bindMaxPeopleAmountChange"/>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <button type="primary" class="create-btn" bindtap="onCreateTeam">发起车队</button>
</div>


